# /bin/bash

DOTFILES=~/linux-conf/dotfiles
rm -f ~/.zshenv
rm -f ~/.zshrc
rm -f ~/.vimrc
rm -f ~/.gitconfig
ln -s $DOTFILES/zsh/env ~/.zshenv
ln -s $DOTFILES/zshrc ~/.zshrc
ln -s $DOTFILES/vimrc ~/.vimrc
ln -s $DOTFILES/gitconfig ~/.gitconfig

# install vcprompt
if [ ! -f ~/bin/vcprompt ]; then
	echo "install vcprompt";
	cd /tmp;
	wget -c https://github.com/xvzf/vcprompt/raw/master/bin/vcprompt --no-check-certificate
	chmod +x vcprompt;
	mkdir -p ~/bin
	mv vcprompt ~/bin/
fi

# install nofgw
if [ ! -f ~/bin/nofgw ]; then
	echo "install nofgw";
	echo "#! /bin/bash" >> ~/bin/nofgw;
	echo "ssh -L 3128:localhost:13128 shenfeng@173.255.249.118 -N" >> ~/bin/nofgw;
	chmod +x ~/bin/nofgw;
fi
	
# install lein
if [ ! -f ~/bin/lein ]; then
	echo "install lein";
	cd /tmp;
	wget -c https://github.com/technomancy/leiningen/raw/stable/bin/lein --no-check-certificate
	chmod +x lein;
	mkdir -p ~/bin
	mv lein ~/bin/
fi

#install google appengine proxy
if [ ! -f ~/bin/proxy-appengine ]; then
	ln -s ~/linux-conf/localproxy-2.0.0/proxy.py ~/bin/proxy-appengine
fi

