# /bin/bash

DOTFILES=~/linux-conf/dotfiles
rm -f ~/.zshenv
rm -f ~/.zshrc
rm -f ~/.vimrc
rm -f ~/.gitconfig
ln -s $DOTFILES/zsh/env ~/.zshenv
ln -s $DOTFILES/zshrc ~/.zshrc
ln -s $DOTFILES/vimrc ~/.vimrc
ln -s $DOTFILES/gitconfig ~/.gitconfig

# install vcprompt
if [ ! -f ~/bin/vcprompt ]; then
	cd /tmp;
	wget -c https://github.com/xvzf/vcprompt/raw/master/bin/vcprompt --no-check-certificate
	mkdir -p ~/bin
	mv vcprompt ~/bin/
fi
	
	


